@using OdeToFood.Core
@model Restaurant




<tr>
    <td>@Model.Name</td>
    <td>@Model.Location</td>
    <td>@Model.Cuisine</td>
    <td>
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-restaurantId="@Model.Id">
            <i class="fa fa-search-plus"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-restaurantId="@Model.Id">
            <i class="fa fa-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-id="@Model.Id">
            <i class="fa fa-trash"></i>
        </a>
    </td>
</tr>
